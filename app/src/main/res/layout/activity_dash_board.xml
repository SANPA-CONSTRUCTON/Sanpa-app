<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".DashBoard">

    <!-- Toolbar -->
<RelativeLayout
android:id="@+id/toolbarRL1"
android:layout_width="match_parent"
android:layout_height="?actionBarSize"
android:background="#1E3A8A"
android:padding="12dp">

<TextView
    android:id="@+id/titleTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Dashboard"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="#FFFFFF"/> <!-- White Text -->

<TextView
    android:id="@+id/subTitleTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/titleTv"
    android:text="abc@gmail.com"
    android:textSize="14sp"
    android:textColor="#B0BEC5"/> <!-- Light Gray Text -->

<ImageView
    android:id="@+id/logoutBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_picture"
    android:contentDescription="Logout" />
</RelativeLayout>

    <!-- Main Content Frame -->
<FrameLayout
android:id="@+id/frame_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/toolbarRL1"
android:layout_above="@+id/nav_bar"
android:background="#FFFFFF"/> <!-- White Content Background -->

    <!-- Bottom Navigation -->
<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/nav_bar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:background="#0A192F"
app:itemIconTint="#FF6F61"
app:itemTextColor="#FF6F61"
app:itemIconSize="28dp"
app:menu="@menu/menu" />
</RelativeLayout>
